---
// 1. 記事の取得を安全に行う
let posts = [];
try {
    posts = await Astro.glob('./posts/*.md');
} catch (e) {
    console.error("記事の読み込みに失敗しました", e);
}

// 2. 壊れた記事を徹底的に排除し、並び替える
const sortedPosts = posts
    .filter(post => post && post.frontmatter && post.frontmatter.title)
    .sort((a, b) => {
        const dateA = new Date(a.frontmatter.date || 0).getTime();
        const dateB = new Date(b.frontmatter.date || 0).getTime();
        return dateB - dateA;
    });

const tabList = [
    { id: "all", label: "トピック" },
    { id: "重要・安全", label: "重要・安全" },
    { id: "教育・学校", label: "教育・学校" },
    { id: "ビザ・生活行政", label: "ビザ・行政" },
    { id: "医療・健康", label: "医療・健康" },
    { id: "グルメ-店", label: "グルメ・店" },
    { id: "お得・経済", label: "お得・経済" },
    { id: "PJN編集長 連載小説", label: "連載小説" }
];
---
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <title>Penang Japanese News</title>
    <style>
        :root { --pjn-red: #ce1126; --bg-color: #f4f6f8; }
        body { font-family: sans-serif; margin: 0; background: var(--bg-color); color: #333; min-height: 100vh; }
        header { background: var(--pjn-red); color: white; padding: 1.1rem 0.5rem; text-align: center; position: sticky; top: 0; z-index: 1000; }
        header h1 { margin: 0; font-size: 1.2rem; letter-spacing: 1px; }
        .site-desc { font-size: 0.8rem; margin-top: 5px; opacity: 0.95; }
        .nav-container { background: #fff; position: sticky; top: 68px; z-index: 999; box-shadow: 0 2px 5px rgba(0,0,0,0.1); overflow-x: auto; white-space: nowrap; -webkit-overflow-scrolling: touch; }
        .nav-container::-webkit-scrollbar { display: none; }
        .nav-tabs { display: inline-flex; padding: 0 10px; margin: 0; list-style: none; }
        .tab-item { padding: 14px 18px; font-weight: bold; font-size: 0.9rem; color: #666; cursor: pointer; position: relative; }
        .tab-item.active { color: var(--pjn-red); }
        .tab-item.active::after { content: ""; position: absolute; bottom: 0; left: 10%; right: 10%; height: 3px; background: var(--pjn-red); }
        main { padding: 10px; max-width: 1400px; margin: auto; }
        .news-grid { display: grid; gap: 12px; grid-template-columns: 1fr; }
        @media (min-width: 768px) { .news-grid { grid-template-columns: repeat(2, 1fr); gap: 20px; } }
        @media (min-width: 1024px) { .news-grid { grid-template-columns: repeat(3, 1fr); } }
        details { background: #fff; border-radius: 10px; box-shadow: 0 2px 8px rgba(0,0,0,0.06); border: 1px solid #eee; height: fit-content; }
        summary { padding: 18px; list-style: none; cursor: pointer; display: block; }
        .card-meta { margin-bottom: 8px; display: flex; align-items: center; gap: 8px; }
        .date { font-size: 0.7rem; color: #999; font-weight: bold; }
        .badge { font-size: 0.65rem; background: #f0f0f0; color: #555; padding: 2px 6px; border-radius: 4px; font-weight: bold; }
        .title { font-size: 1rem; font-weight: bold; line-height: 1.5; color: #111; display: block; }
        .content { padding: 0 18px 18px; border-top: 1px solid #f5f5f5; font-size: 0.95rem; line-height: 1.8; }
        .hidden { display: none !important; }
        :global(h3) { font-size: 1.05rem; color: var(--pjn-red); margin: 18px 0 10px; border-left: 4px solid var(--pjn-red); padding-left: 10px; }
        :global(.source-link) { display: inline-block; margin-top: 15px; font-size: 0.85rem; color: #005596; text-decoration: none; background: #f8f9fa; padding: 6px 12px; border-radius: 6px; border: 1px solid #ddd; }
    </style>
</head>
<body>
    <header>
        <h1>PENANG JAPANESE NEWS</h1>
        <p class="site-desc">ペナン現地ニュースを厳選、毎日日本語で更新</p>
    </header>
    <nav class="nav-container">
        <ul class="nav-tabs">
            {tabList.map((tab, index) => (
                <li class={`tab-item ${index === 0 ? 'active' : ''}`} data-target={tab.id}>{tab.label}</li>
            ))}
        </ul>
    </nav>
    <main>
        <div class="news-grid" id="news-grid">
            {sortedPosts.map(post => (
                <details class="article-card" data-category={post.frontmatter.category || "その他"}>
                    <summary>
                        <div class="card-meta">
                            <span class="date">{(post.frontmatter.date || "").toString().replace(/-/g, '/')}</span>
                            <span class="badge">{post.frontmatter.category || "未分類"}</span>
                        </div>
                        <span class="title">{post.frontmatter.title}</span>
                    </summary>
                    <div class="content">
                        <post.Content />
                    </div>
                </details>
            ))}
        </div>
        {sortedPosts.length === 0 && <p style="text-align:center; padding:20px;">記事を読み込み中、または記事がまだありません。</p>}
    </main>
    <script>
        const tabs = document.querySelectorAll('.tab-item');
        const articles = document.querySelectorAll('.article-card');
        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                tabs.forEach(t => t.classList.remove('active'));
                tab.classList.add('active');
                const target = tab.getAttribute('data-target');
                articles.forEach(a => {
                    const cat = a.getAttribute('data-category');
                    if (target === 'all' || cat === target) {
                        a.classList.remove('hidden');
                    } else {
                        a.classList.add('hidden');
                    }
                });
            });
        });
    </script>
</body>
</html>
