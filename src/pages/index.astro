---
const posts = await Astro.glob('./posts/*.md');
const sortedPosts = posts.sort((a, b) => new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime());

const categories = ["重要", "生活", "お得", "教育"];
---
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Penang Japanese News (PJN)</title>
    <style>
        :root {
            --pjn-red: #ce1126;
            --tab-bg: #fff;
            --bg-color: #f0f2f5;
        }

        body {
            font-family: -apple-system, sans-serif;
            margin: 0;
            background: var(--bg-color);
            color: #333;
        }

        /* 固定ヘッダー */
        header {
            background: var(--pjn-red);
            color: white;
            padding: 1rem;
            text-align: center;
            position: sticky;
            top: 0;
            z-index: 100;
        }

        header h1 { margin: 0; font-size: 1.2rem; letter-spacing: 1px; }

        /* タブナビゲーション（SmartNews風） */
        .nav-container {
            background: var(--tab-bg);
            position: sticky;
            top: 52px; /* ヘッダーの高さに合わせて調整 */
            z-index: 99;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            overflow-x: auto;
            white-space: nowrap;
            -webkit-overflow-scrolling: touch;
        }

        .nav-tabs {
            display: flex;
            padding: 0 10px;
            margin: 0;
            list-style: none;
        }

        .tab-item {
            padding: 12px 20px;
            font-weight: bold;
            font-size: 0.9rem;
            cursor: pointer;
            color: #666;
            border-bottom: 3px solid transparent;
        }

        .tab-item.active {
            color: var(--pjn-red);
            border-bottom: 3px solid var(--pjn-red);
        }

        /* ニュースカードのグリッドレイアウト（レスポンシブ） */
        main {
            padding: 15px;
            max-width: 1200px;
            margin: auto;
        }

        .news-grid {
            display: grid;
            gap: 15px;
            /* スマホ: 1列 */
            grid-template-columns: 1fr;
        }

        @media (min-width: 600px) {
            /* タブレット: 2列 */
            .news-grid { grid-template-columns: repeat(2, 1fr); }
        }

        @media (min-width: 1024px) {
            /* PC: 3列 */
            .news-grid { grid-template-columns: repeat(3, 1fr); }
        }

        /* 記事カードの詳細デザイン */
        details {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            overflow: hidden;
            border: 1px solid #eee;
            height: fit-content;
        }

        summary {
            padding: 15px;
            list-style: none;
            cursor: pointer;
            outline: none;
        }
        
        summary::-webkit-details-marker { display: none; }

        .date { font-size: 0.7rem; color: #999; font-weight: bold; }
        .category-badge {
            font-size: 0.65rem;
            background: #eee;
            padding: 2px 6px;
            border-radius: 4px;
            margin-left: 5px;
            vertical-align: middle;
        }

        .title {
            display: block;
            font-size: 1rem;
            font-weight: bold;
            margin-top: 8px;
            line-height: 1.4;
        }

        .content {
            padding: 0 15px 15px;
            border-top: 1px solid #f5f5f5;
            font-size: 0.95rem;
            line-height: 1.7;
        }

        :global(.source-link) {
            display: block;
            margin-top: 15px;
            font-size: 0.8rem;
            color: #005596;
            text-decoration: none;
        }

        /* 表示・非表示の制御 */
        .hidden { display: none; }
    </style>
</head>
<body>
    <header>
        <h1>PENANG JAPANESE NEWS</h1>
    </header>

    <nav class="nav-container">
        <ul class="nav-tabs">
            <li class="tab-item active" data-target="all">トピック</li>
            <li class="tab-item" data-target="重要">重要</li>
            <li class="tab-item" data-target="生活">生活</li>
            <li class="tab-item" data-target="お得">お得</li>
            <li class="tab-item" data-target="教育">教育</li>
        </ul>
    </nav>

    <main>
        <div class="news-grid" id="news-container">
            {sortedPosts.map(post => (
                <details class="article-card" data-category={post.frontmatter.category}>
                    <summary>
                        <span class="date">{post.frontmatter.date}</span>
                        <span class="category-badge">{post.frontmatter.category}</span>
                        <span class="title">{post.frontmatter.title}</span>
                    </summary>
                    <div class="content">
                        <post.Content />
                    </div>
                </details>
            ))}
        </div>
    </main>

    <script>
        // タブ切り替えロジック
        const tabs = document.querySelectorAll('.tab-item');
        const articles = document.querySelectorAll('.article-card');

        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                const target = tab.getAttribute('data-target');

                // アクティブなタブの見た目を変更
                tabs.forEach(t => t.classList.remove('active'));
                tab.classList.add('active');

                // 記事のフィルタリング
                articles.forEach(article => {
                    if (target === 'all' || article.getAttribute('data-category') === target) {
                        article.classList.remove('hidden');
                    } else {
                        article.classList.add('hidden');
                    }
                });
            });
        });
    </script>
</body>
</html>
