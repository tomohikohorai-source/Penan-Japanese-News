---
const posts = await Astro.glob('./posts/*.md');
const sortedPosts = posts
    .filter(post => post.frontmatter.title)
    .sort((a, b) => new Date(b.frontmatter.date || 0).getTime() - new Date(a.frontmatter.date || 0).getTime());

const tabList = [
    { id: "all", label: "トピック" },
    { id: "重要", label: "重要" },
    { id: "コラム", label: "コラム" },
    { id: "グルメ", label: "グルメ" },
    { id: "おでかけ", label: "おでかけ" },
    { id: "暮らし", label: "暮らし" },
    { id: "教育", label: "教育" },
    { id: "エンタメ", label: "エンタメ" },
    { id: "お得", label: "お得" }
];
---
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Penang Japanese News (PJN)</title>
    <style>
        :root { --pjn-red: #ce1126; --tab-bg: #fff; --bg-color: #f4f6f8; }
        body { font-family: sans-serif; margin: 0; background: var(--bg-color); color: #333; }
        
        /* ヘッダーのスマホ最適化 */
        header { 
            background: var(--pjn-red); 
            color: white; 
            padding: 1rem 0.5rem; 
            text-align: center; 
            position: sticky; 
            top: 0; 
            z-index: 1000; 
        }
        header h1 { 
            margin: 0; 
            font-size: 1.2rem; 
            letter-spacing: 1px; 
            font-weight: bold; 
        }
        .site-desc { 
            font-size: 0.75rem; 
            margin: 5px auto 0; 
            opacity: 0.9; 
            line-height: 1.3;
            max-width: 90%;
            word-break: keep-all; /* 改行を不自然にしない */
        }

        /* PCでの表示サイズ調整 */
        @media (min-width: 768px) {
            header h1 { font-size: 1.6rem; }
            .site-desc { font-size: 0.9rem; }
        }

        /* タブの固定位置をヘッダーの高さに合わせる */
        .nav-container { 
            background: var(--tab-bg); 
            position: sticky; 
            top: 75px; /* スマホ用高さ */
            z-index: 999; 
            box-shadow: 0 2px 8px rgba(0,0,0,0.1); 
            overflow-x: auto; 
            white-space: nowrap; 
            -webkit-overflow-scrolling: touch; 
        }
        @media (min-width: 768px) {
            .nav-container { top: 95px; } /* PC用高さ */
        }

        .nav-container::-webkit-scrollbar { display: none; }
        .nav-tabs { display: inline-flex; padding: 0 5px; margin: 0; list-style: none; }
        .tab-item { padding: 12px 15px; font-weight: bold; font-size: 0.85rem; cursor: pointer; color: #555; position: relative; }
        @media (min-width: 768px) {
            .tab-item { padding: 15px 22px; font-size: 0.95rem; }
        }
        
        .tab-item.active { color: var(--pjn-red); }
        .tab-item.active::after { content: ""; position: absolute; bottom: 0; left: 15%; right: 15%; height: 3px; background: var(--pjn-red); border-radius: 2px; }
        
        main { padding: 15px; max-width: 1400px; margin: auto; }
        .news-grid { display: grid; gap: 15px; grid-template-columns: 1fr; }
        @media (min-width: 768px) { .news-grid { grid-template-columns: repeat(2, 1fr); gap: 20px; } }
        @media (min-width: 1100px) { .news-grid { grid-template-columns: repeat(3, 1fr); } }
        
        details { background: #fff; border-radius: 10px; box-shadow: 0 3px 10px rgba(0,0,0,0.06); border: 1px solid rgba(0,0,0,0.05); height: fit-content; }
        summary { padding: 15px; list-style: none; cursor: pointer; display: flex; flex-direction: column; }
        summary::-webkit-details-marker { display: none; }
        .date { font-size: 0.7rem; color: #999; }
        .badge { font-size: 0.65rem; background: #f0f0f0; padding: 2px 6px; border-radius: 4px; margin-left: 5px; }
        .title { font-size: 1rem; font-weight: bold; margin-top: 8px; line-height: 1.4; color: #111; }
        .content { padding: 0 15px 15px; border-top: 1px solid #f0f0f0; line-height: 1.7; font-size: 0.9rem; }
        .hidden { display: none; }
        :global(.source-link) { display: inline-block; margin-top: 12px; font-size: 0.8rem; color: #005596; text-decoration: none; background: #f8f9fa; padding: 4px 10px; border-radius: 4px; border: 1px solid #ddd; }
    </style>
</head>
<body>
    <header>
        <h1>PENANG JAPANESE NEWS</h1>
        <p class="site-desc">
            ペナン現地ニュースを厳選し、日本語で毎日更新。
        </p>
    </header>
    <nav class="nav-container">
        <ul class="nav-tabs">
            {tabList.map((tab, index) => (
                <li class={`tab-item ${index === 0 ? 'active' : ''}`} data-target={tab.id}>{tab.label}</li>
