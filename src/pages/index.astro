---
let posts = [];
try {
    posts = await Astro.glob('./posts/*.md');
} catch (e) {
    console.error("記事の読み込み失敗", e);
}

// 記事のソート（日付＋ビルド順）
const allSortedPosts = posts
    .filter(post => post && post.frontmatter && post.frontmatter.title)
    .sort((a, b) => {
        const dateA = new Date(a.frontmatter.date || 0).getTime();
        const dateB = new Date(b.frontmatter.date || 0).getTime();
        if (dateB !== dateA) return dateB - dateA;
        return b.file.localeCompare(a.file);
    });

// 小説だけのリストを作成（ページめくり用）
const novelPosts = allSortedPosts
    .filter(p => p.frontmatter.category === "PJN編集長 連載小説")
    .reverse(); // 第1回から順に並べる

const tabList = [
    { id: "all", label: "トピック", color: "#ce1126" },
    { id: "重要・安全", label: "重要・安全", color: "#ce1126" },
    { id: "教育・学校", label: "教育・学校", color: "#005596" },
    { id: "ビザ・生活行政", label: "ビザ・行政", color: "#2e7d32" },
    { id: "医療・健康", label: "医療・健康", color: "#00838f" },
    { id: "グルメ・店", label: "グルメ・店", color: "#ef6c00" },
    { id: "お得・経済", label: "お得・経済", color: "#d4af37" },
    { id: "PJN編集長 連載小説", label: "連載小説", color: "#6a1b9a" }
];
