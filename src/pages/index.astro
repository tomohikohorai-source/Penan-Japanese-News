---
let posts = [];
try {
    posts = await Astro.glob('./posts/*.md');
} catch (e) {
    console.error("記事の読み込み失敗", e);
}

const sortedPosts = posts
    .filter(post => post && post.frontmatter && post.frontmatter.title)
    .sort((a, b) => {
        const dateA = new Date(a.frontmatter.date || 0).getTime();
        const dateB = new Date(b.frontmatter.date || 0).getTime();
        return dateB - dateA;
    });

const tabList = [
    { id: "all", label: "トピック" },
    { id: "重要・安全", label: "重要・安全" },
    { id: "教育・学校", label: "教育・学校" },
    { id: "ビザ・生活行政", label: "ビザ・行政" },
    { id: "医療・健康", label: "医療・健康" },
    { id: "グルメ・店", label: "グルメ・店" },
    { id: "お得・経済", label: "お得・経済" },
    { id: "PJN編集長 連載小説", label: "連載小説" }
];
---
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <title>Penang Japanese News</title>
    <style>
        :root { --pjn-red: #ce1126; --bg-color: #f4f6f8; }
        body { font-family: sans-serif; margin: 0; background: var(--bg-color); color: #333; }
        header { background: var(--pjn-red); color: white; padding: 1.1rem 0.5rem; text-align: center; position: sticky; top: 0; z-index: 1000; }
        header h1 { margin: 0; font-size: 1.2rem; font-weight: bold; }
        .site-desc { font-size: 0.8rem; margin-top: 4px; opacity: 0.95; }

        .info-bar { background: #333; color: white; padding: 6px 10px; font-size: 0.75rem; display: flex; justify-content: center; position: sticky; top: 68px; z-index: 999; height: 20px; align-items: center;}
        .aqi-value { font-weight: bold; padding: 2px 6px; border-radius: 4px; display: inline-block; margin-left: 5px; }
        .aqi-good { background: #009966; }
        .aqi-moderate { background: #ffde33; color: #000; }
        .aqi-unhealthy { background: #ff9933; }

        .nav-container { background: #fff; position: sticky; top: 104px; z-index: 998; box-shadow: 0 2px 5px rgba(0,0,0,0.1); overflow-x: auto; white-space: nowrap; -webkit-overflow-scrolling: touch; }
        @media (min-width: 768px) { .nav-container { top: 130px; } .info-bar { top: 94px; } header h1 { font-size: 1.6rem; } }

        .nav-container::-webkit-scrollbar { display: none; }
        .nav-tabs { display: inline-flex; padding: 0 10px; margin: 0; list-style: none; }
        .tab-item { padding: 14px 20px; font-weight: bold; font-size: 0.9rem; color: #666; cursor: pointer; position: relative; }
        .tab-item.active { color: var(--pjn-red); }
        .tab-item.active::after { content: ""; position: absolute; bottom: 0; left: 10%; right: 10%; height: 3px; background: var(--pjn-red); }
        
        main { padding: 10px; max-width: 1400px; margin: auto; }
        .news-grid { display: grid; gap: 12px; grid-template-columns: repeat(auto-fill, minmax(350px, 1fr)); }
        @media (max-width: 480px) { .news-grid { grid-template-columns: 1fr; } }

        details { background: #fff; border-radius: 10px; box-shadow: 0 2px 8px rgba(0,0,0,0.06); border: 1px solid #eee; height: fit-content; }
        summary { padding: 18px; list-style: none; cursor: pointer; display: block; outline: none; }
        .card-meta { margin-bottom: 8px; display: flex; align-items: center; gap: 8px; }
        .date { font-size: 0.7rem; color: #999; font-weight: bold; }
        .badge { font-size: 0.65rem; background: #f0f0f0; color: #555; padding: 2px 6px; border-radius: 4px; font-weight: bold; }
        .new-badge { display: none; font-size: 0.7rem; background: #ff4757; color: white; padding: 2px 6px; border-radius: 4px; font-weight: bold; margin-left: 5px; }
        
        .title { font-size: 1rem; font-weight: bold; line-height: 1.5; color: #111; display: block; }
        .content { padding: 0 18px 18px; border-top: 1px solid #f5f5f5; font-size: 0.95rem; line-height: 1.8; color: #444; }
        .hidden { display: none !important; }
        
        :global(h3) { font-size: 1.05rem; color: var(--pjn-red); margin: 18px 0 10px; border-left: 4px solid var(--pjn-red); padding-left: 10px; }
        :global(.source-link) { display: inline-block; margin-top: 15px; font-size: 0.85rem; color: #005596; text-decoration: none; background: #f8f9fa; padding: 6px 12px; border-radius: 6px; border: 1px solid #ddd; }
    </style>
</head>
<body>
    <header>
        <h1>PENANG JAPANESE NEWS</h1>
        <p class="site-desc">ペナン現地ニュースを厳選、毎日日本語で更新</p>
    </header>

    <div class="info-bar">
        <span id="pjn-aqi">ペナン空気指数(AQI): 取得中...</span>
    </div>

    <nav class="nav-container">
        <ul class="nav-tabs">
            {tabList.map((tab, index) => (
                <li class={`tab-item ${index === 0 ? 'active' : ''}`} data-target={tab.id}>{tab.label}</li>
            ))}
        </ul>
    </nav>
    <main>
        <div class="news-grid" id="news-grid">
            {sortedPosts.map(post => (
                <details class="article-card" data-category={post.frontmatter.category} data-date={post.frontmatter.date}>
                    <summary>
                        <div class="card-meta">
                            <span class="date">{(post.frontmatter.date || "").toString().split('-').join('/')}</span>
                            <span class="badge">{post.frontmatter.category}</span>
                            <span class="new-badge">NEW</span>
                        </div>
                        <span class="title">{post.frontmatter.title}</span>
                    </summary>
                    <div class="content">
                        <post.Content />
                    </div>
                </details>
            ))}
        </div>
    </main>

    <script is:inline>
        // 1. タブ切り替えロジック（最優先で実行）
        function initTabs() {
            var tabs = document.querySelectorAll('.tab-item');
            var articles = document.querySelectorAll('.article-card');
            for (var i = 0; i < tabs.length; i++) {
                tabs[i].onclick = function() {
                    for (var j = 0; j < tabs.length; j++) tabs[j].classList.remove('active');
                    this.classList.add('active');
                    var target = this.getAttribute('data-target');
                    this.scrollIntoView({ behavior: 'smooth', inline: 'center', block: 'nearest' });
                    for (var k = 0; k < articles.length; k++) {
                        var cat = articles[k].getAttribute('data-category');
                        if (target === 'all' || cat === target) articles[k].classList.remove('hidden');
                        else articles[k].classList.add('hidden');
                    }
                };
            }
        }

        // 2. NEWバッジの制御（24時間以内判定）
        function initNewBadges() {
            var now = new Date();
            var articles = document.querySelectorAll('.article-card');
            for (var i = 0; i < articles.length; i++) {
                var pubDateStr = articles[i].getAttribute('data-date');
                if (!pubDateStr) continue;
                var pubDate = new Date(pubDateStr);
                var diff = (now - pubDate) / 1000 / 60 / 60; // hours
                if (diff >= 0 && diff < 24) {
                    articles[i].querySelector('.new-badge').style.display = 'inline-block';
                }
            }
        }

        // 3. AQIの取得（非同期で、失敗しても他を止めない）
        function initAQI() {
            var el = document.getElementById('pjn-aqi');
            fetch('https://api.waqi.info/feed/penang/?token=demo')
                .then(function(res) { return res.json(); })
                .then(function(json) {
                    if (json.status === 'ok') {
                        var aqi = json.data.aqi;
                        var cls = 'aqi-good';
                        var txt = '良好';
                        if (aqi > 50) { cls = 'aqi-moderate'; txt = '普通'; }
                        if (aqi > 100) { cls = 'aqi-unhealthy'; txt = '注意'; }
                        el.innerHTML = 'ペナン大気指数(AQI): <span class="aqi-value ' + cls + '">' + aqi + ' (' + txt + ')</span>';
                    } else {
                        el.innerText = '大気指数: 取得制限中';
                    }
                })
                .catch(function() {
                    el.innerText = '大気指数: オフライン';
                });
        }

        // 実行開始
        initTabs();
        initNewBadges();
        initAQI();
    </script>
</body>
</html>
