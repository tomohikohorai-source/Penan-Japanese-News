---
// 全記事を取得して、それぞれの専用URL（slug）を作る設定
export async function getStaticPaths() {
  const posts = await Astro.glob('./*.md');
  return posts.map(post => ({
    params: { 
      slug: post.file.split('/').pop().replace('.md', '') 
    },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = post;
---
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{post.frontmatter.title} - PJN</title>
    <style>
        :root { --pjn-red: #ce1126; --bg-color: #f4f6f8; }
        body { font-family: sans-serif; margin: 0; background: var(--bg-color); color: #333; line-height: 1.8; }
        header { background: var(--pjn-red); color: white; padding: 1rem; text-align: center; }
        header a { color: white; text-decoration: none; font-weight: bold; font-size: 0.9rem; }
        main { padding: 20px; max-width: 800px; margin: auto; background: white; min-height: 100vh; box-shadow: 0 0 10px rgba(0,0,0,0.05); }
        .meta { font-size: 0.8rem; color: #888; margin-bottom: 10px; }
        .badge { background: #f0f0f0; color: #555; padding: 2px 8px; border-radius: 4px; font-weight: bold; }
        h1 { font-size: 1.5rem; line-height: 1.4; color: #111; margin: 10px 0 20px 0; border-left: 5px solid var(--pjn-red); padding-left: 15px; }
        :global(h3) { font-size: 1.2rem; color: var(--pjn-red); margin: 25px 0 15px; border-bottom: 2px solid var(--pjn-red); padding-bottom: 5px; }
        :global(p) { margin-bottom: 1.5rem; }
        :global(.source-link) { display: inline-block; margin-top: 30px; font-size: 0.9rem; color: #005596; text-decoration: none; background: #f8f9fa; padding: 10px 20px; border-radius: 6px; border: 1px solid #ddd; }
    </style>
</head>
<body>
    <header><a href="/">← PENANG JAPANESE NEWS TOP</a></header>
    <!-- data-pagefind-body をつけることで、ここが検索対象になります -->
    <main data-pagefind-body>
        <div class="meta">
            <span class="date">{post.frontmatter.date.split('-').join('/')}</span>
            <span class="badge">{post.frontmatter.category}</span>
        </div>
        <h1>{post.frontmatter.title}</h1>
        <div class="content">
            <Content />
        </div>
    </main>
</body>
</html>
